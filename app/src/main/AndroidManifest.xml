<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.landon.physics">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Solve Physics"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashScreen"
            android:label="Solve Physics"
            android:noHistory="true"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>

            </intent-filter>

        </activity>

        <activity
            android:name=".MainActivity"
            android:label="Solve Physics"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".OneActivity"
            android:label="Movement with Constant Velocity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".TwoActivity"
            android:label="Movement with Constant Acceleration"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ThreeActivity"
            android:label="Collisions"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>

</manifest>
