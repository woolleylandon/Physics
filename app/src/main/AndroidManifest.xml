<?xml version="1.0" encoding="utf-8"?>

<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.landon.physics">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait">

            <intent-filter>
                <action   android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".OneActivity"
            android:label="@string/activity_one_name"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".TwoActivity"
            android:label="@string/activity_two_name"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ThreeActivity"
            android:label="@string/activity_three_name"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".PopVelocity"
            android:label="@string/pop_velocity_name"
            android:theme="@style/AppTheme.PopUpTheme"/>

        <activity
            android:name=".PopAcceleration"
            android:label="@string/pop_acceleration_name"
            android:theme="@style/AppTheme.PopUpTheme"/>

        <activity
            android:name=".PopCollisions"
            android:label="@string/pop_collisions_name"
            android:theme="@style/AppTheme.PopUpTheme"/>

    </application>

</manifest>